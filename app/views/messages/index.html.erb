
<div class="content">
    <div class="container">
      <div class="row">
      
          <section class="content-inner">
            <div class="card-wrap">
              <div class="card">                 
                <div class="card-main">
                  <h1 class="card-heading "style="color: white;"><span class="icon icon-lg">format_list_bulleted</span>List of employees leave messages</h1>
                    <div class="card-inner">
                      
                        
								<table class="table">
			<thead>
				<tr>
					<th>Sender</th>
					<th>Status</th>
					<th>Leave start at</th>
					<th>Leave end at</th>
					<th>Leave taken</th>
					<th>Action</th>
				</tr>
			</thead>
				  
			<tbody>
				<% @messages.each do |message| %>
				<tr>
				<td>
					<%= message.username %>
				</td>

				<td>
					<%= message.approval_status %>
				</td>
				<td>
					<%= message.leave_start_date %>
				</td>
				<td>
					<%= message.leave_end_date %>
				</td>
				<td>
					<%= message.amount_taken %> days
				</td>
				
				<td>
<% if message.approval_status=="new" || message.approval_status=="recheck" || message.approval_status=="renew" %>				<a href="#" class="btn btn-green" data-toggle="modal" data-target="#approve<%= message.id %>">Approve</a>
				<% else %>
				
				<% end %>
<% if message.approval_status=="new" || message.approval_status=="recheck" || message.approval_status=="renew" %>				<a href="#" class="btn btn-red" data-toggle="modal" data-target="#reject<%= message.id %>">Reject</a>
				<% else %>
				<% end %>
				<% if message.approval_status=="new" || message.approval_status=="recheck" || message.approval_status=="renew" %>
				<a href="#" class="btn btn-yellow" data-toggle="modal" data-target="#reply<%= message.id %>">Reply</a>
				<% else %>
				<% end %>

						<div aria-hidden="true" class="modal modal-va-middle fade" id="approve<%= message.id %>" role="dialog" tabindex="-1">
						<%= form_for message, :url => {:action => "approve", :id => message, :controller => "messages"} do |f| %>
						<div class="modal-dialog modal-xs">
						<div class="modal-content">
						<div class="modal-inner">
						<p class="content">Approve this leave message ?</p>
						</div>
						<div class="modal-footer">
						<p class="text-right">
						
						
						
                     </p>
						<%= f.hidden_field :approval_status, value: "approved" %>
						<%= f.submit "Approve", class: 'btn btn-green' %>
						<div class="pull-right">
						<a class="btn btn-yellow" data-dismiss="modal">Cancel
						</a>
						</div>
						<% end %>
						</p>
						</div>
						</div>
						</div>
						</div>
						<div aria-hidden="true" class="modal modal-va-middle fade" id="reject<%= message.id %>" role="dialog" tabindex="-1">
						<div class="modal-dialog modal-xs">
						<div class="modal-content">
						<div class="modal-inner">
						<p class="content">Reject this leave ?</p>
						</div>
						<div class="modal-footer">
						<p class="text-right">
						<%= form_for message,:url => {:action => "reject", :id => message, 
							:controller => "messages" } do |f| %>
						<%= f.hidden_field :approval_status, value: "rejected" %>
						<%= f.submit "Reject", class: 'btn btn-yellow' %>
						<div class="pull-right">

						<a class="btn btn-green" data-dismiss="modal">Cancel
						</a>
						</div>
						<% end %>
						</p>

						
						
						
						
						
						
						</div>
						</div>
						</div>
						</div>

						<div aria-hidden="true" class="modal modal-va-middle fade" id="reply<%= message.id %>" role="dialog" tabindex="-1">
						<div class="modal-dialog modal-xs">
						<div class="modal-content">
						<div class="modal-inner">
						<p class="content">Reply leave message</p>
						</div>

						<div class="modal-footer">
						<p class="text-right">
						
						<%= form_for message, :url => {:action => "reply", :id => message, :controller => "messages"} do |f| %>
						 
                        <%= f.text_field :admin_respond,class: 'form-control', id: 'admin_respond', placeholder: "your reply please", style: 'color: white;' %>
                        </p>
						<%= f.hidden_field :approval_status, value: "recheck" %>
						<%= f.submit "Send", class: 'btn btn-green' %>
						<div class="pull-right">
						<a class="btn btn-yellow" data-dismiss="modal">Cancel
						</a>
						</div>
						<% end %>
						</p>
						</div>
						</div>
						</div>
						</div>
		
					 
				</td>
				</tr>
			<% end %>
			</tbody>
		</table>
		<%= will_paginate @messages, class:'apple_pagination' %>

                          
                    </div>
            </div>
        </div>
      </div>
    </div>
  </div>
<!-------------------------------------------------------------------->
