<div class="content">
    <div class="container">
      <div class="row">
        <div class="col-lg-4 col-lg-push-4 col-sm-6 col-sm-push-3">
          <section class="content-inner">
            <div class="card-wrap">
              <div class="card">
                <div class="card-main">
                  <div class="card-header">
                    <div class="card-inner">
                      <h1 class="card-heading" style="color: white;">Resubmit leave application</h1>
                    </div>
                  </div>
                  <div class="card-inner">
                    <p class="text-center">
                    </p>
                    <% if @message %>
                    <%= form_for @message do |a| %>

                    <div class="form-group-green form-group-label">
                      <div class="row">
                        <div class="col-md-10 col-md-push-1">
                        <label class="floating-label" for="admin_respond">Manager said</label><%= a.text_field :admin_respond,class: 'form-control',disabled: '', id: 'admin_respond', placeholder: "admin_respond", style: 'color: white;' %>

                        </div>
                      </div>
                    <div class="form-group-green form-group-label">
                        <div class="row">
                          <div class="col-md-10 col-md-push-1">
                          <label class="floating-label" for="position" > Leave category</label>
                            <%= a.select(:category, ['Holiday','Urgent','secret'], {}, { :class => 'form-control',:id => 'position',:style => 'color:#00CC44;'}) %>
                          </div>
                        </div>
                      </div>
                      
                    </div>
                      <div class="form-group-green form-group-label">
                        <div class="row">
                          <div class="col-md-10 col-md-push-1">
                            <label class="floating-label" for="leave_start_date">Leave start at</label>

                            <%= a.text_field :leave_start_date,class: 'form-control', id: 'selector1', placeholder: "leave_start_date", style: 'color: white;' %>
                          </div>
                        </div>
                      </div>
                      <div class="form-group-green form-group-label">
                        <div class="row">
                          <div class="col-md-10 col-md-push-1">
                            <label class="floating-label" for="login-password">Leave end at</label>
                            <%= a.text_field :leave_end_date,id: 'selector2', class: 'form-control', placeholder: "leave_end_date",style: 'color: white' %>
                          </div>
                        </div>
                      </div>
                      <div class="form-group-green form-group-label">
                        <div class="row">
                          <div class="col-md-10 col-md-push-1">
                            <label class="floating-label" for="message">Your message
                            </label>
                            <%= a.text_field :message, class: 'form-control textarea-autosize', id: 'message', placeholder: "message",style: 'color: white;' %>
                          </div>
                        </div>
                      </div>

                      <div class="form-group">
                        <div class="row">

                          <div class="col-md-10 col-md-push-1">

                            <%= a.submit "Create message",class:'btn btn-block btn-green' %>
                          </div>
                        </div>
                      </div>
                      <div class="form-group">
                        <div class="row">
                        </div>
                      </div>
                      <%= a.hidden_field :approval_status, value: "renew" %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
              
            </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
   $('#selector1').pickdate();
  </script>
  <script type="text/javascript">
   $('#selector2').pickdate();
  </script>
  <% else %>
  <h1 style="color: white;"><span class="icon icon-lg">email</span></h1>
<h2 style="color: white;">Nothing to resubmit :(</h2>
  <% end %>

   <% unless flash.empty? %>
    <script type="text/javascript">
        <% flash.each do |f| %>
        <% type = f[0].to_s.gsub('alert', 'error').gsub('notice', 'info') %>
         toastr['<%= type %>']('<%= f[1] %>');
        <% end %>
    </script>
   <% end %>