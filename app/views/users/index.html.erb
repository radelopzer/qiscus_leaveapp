
<div class="content">
    <div class="container">
      <div class="row">
      
          <section class="content-inner">
            <div class="card-wrap">
              <div class="card">
                <div class="card-main">
                  <h1 class="card-heading "style="color: white;">List of employees</h1>
                    <div class="card-inner">
                      
                        
                      											<table class="table">
												<thead>
													<tr>
														<th>Username</th>
														<th>Email</th>
														<th>Status</th>
														<th>amount</th>
														<th>Action</th>
													</tr>
												</thead>
													  
												<tbody>
													<% @users.each do |user| %>
													<tr>
													<td>
														<%= user.username %>
													</td>
													<td>
														<%= user.email %>
													</td>
													<td>
														<%= user.status %>
													</td>
													<td>
														<%= user.amount %>
													</td>
													<td>
														 <%= link_to 'Delete', user_path(user), class: 'btn btn-red', method: :delete %>
													</td>
													</tr>
												<% end %>
												</tbody>
											</table>
                          
                        </div>
                      </div>
                  </div>
                </div>
              </div>
            </div>
              
            </div>
        </div>
      </div>
    </div>
  </div>